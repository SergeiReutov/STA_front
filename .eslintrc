{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "ignorePatterns": ["*.test.js", "node_modules/"],
  "rules": {
    "quotes": ["error", "single"],
    "max-len": ["error", { "code": 120, "comments": 150 }],
    "semi": ["error", "always"],
    "no-console": 1
  }
}
